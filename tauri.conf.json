{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "zap-rs",
  "version": "1.0.0",
  "identifier": "com.zap-rs.data",
  "build": {
    "frontendDist": null
  },
  "app": {
    "withGlobalTauri": false,
    "windows": [
      {
        "label": "main",
        "center": true,
        "userAgent": "Mozilla/5.0 (X11; Linux x86_64; rv:140.0) Gecko/20100101 Firefox/140.0",
        "url": "https://web.whatsapp.com",
        "title": "zap-rs",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["rpm", "deb"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
